<% layout("/layouts/biolerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label" >Title</label>
                    <input type="text" name="listings[title]" placeholder="Add a catchy title" class="form-control" required>
                    <div  class="valid-feedback">Title looks great!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label" >Description</label>
                    <textarea name="listings[description]" class="form-control" required ></textarea>
                    <div class="invalid-feedback">Plese add a short description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label" >Image Link</label>
                    <input type="text" name="listings[image]" placeholder="enter image url/link" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label" >Price</label>
                        <input name="listings[price]" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">Plese enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label" >Country</label>
                        <input type="text" name="listings[country]" placeholder="India" class="form-control" required>
                        <div  class="invalid-feedback">Plese enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label" >Location</label>
                    <input type="text" name="listings[location]" placeholder="Jaipur, Rajasthan" class="form-control" required>
                    <div  class="invalid-feedback">Plese enter a valid location</div>
                </div>
                <button class="btn btn-dark add-btn">Add</button>
                <br> <br>
            </form>
        </div>
    </div>
</body>